.container {
  width: 100%;
  display: flex;
  flex-direction: column;
  height: 100vh;
  background-color: #f5f5f5;
  padding: 0;
}
/* 顶部用户信息部分 */
.profile-header {
  position: relative;
  display: flex;
  align-items: center;
  width: 100%;
  height: 30vh;
  background: linear-gradient(135deg, #3c7ef3, #69a9f3);
  padding: 20px;
  color: white;
  box-sizing: border-box;
}
.avatar {
  width: 100px;
  height: 100px;
  border-radius: 50%;
}
.avatar image {
  width: 100%;
  height: 100%;
}
.user-info {
  flex: 1;
  margin-left: 15px;
  display: flex;
  flex-direction: column;
}

.user-name {
  font-size: 25px;
  font-weight: bold;
}

.user-phone {
  font-size: 20px;
  margin-top: 5px;
  color: #e6e6e6;
}

.settings-icon {
  width: 20px;
  height: 20px;
}

.settings-icon image {
  width: 100%;
  height: 100%;
}


/* 底部按钮 */
.logout-button {
  width: 80% !important; 
  height: 45px;
  margin-bottom: 200px;
  background-color: #3c7ef3;
  color: white;
  font-size: 18px;
  border-radius: 10px;
  font-weight: bold;

}
