.container{
  display: flex;
  flex-direction: column;
  align-items: center;
  position: relative;
  padding: 20px;
  gap: 20px; 
}
.background-image{
  width: 100%;
  height: 250px;
}
.background-image image {
  width: 100%;
  height: 100%;
  object-fit: cover; 
}
.house-info{
  display: flex;
  background-color: #bcdcfc;
  padding: 20px;
  position: relative;
  top: -30px;
  border-radius: 10px;
  align-items: center;
  justify-content: center;
  width: 90%;
  gap: 40px; 
  box-shadow: 0 0px 10px rgb(6, 125, 252);
}
.house-info .info-house-item {
  color: white; /* 字体颜色为白色 */
  text-align: center; /* 文本居中 */
  padding: 5px;
  font-size: 14px; /* 字体大小 */
}
.basic-info {
  margin-bottom: 10px;
  display: flex;
  flex-direction: column;
  gap: 20px;
  width: 100%;
  border: 2px solid #f0f4fc;
  margin-top: -20px; 
}

.info-header {
  display: flex;
  align-items: center; /* 垂直居中 */
  gap: 10px; /* 图片和标题之间的间距 */
  background-color:#ecf4fc;
  width: 100%;
  border-radius: 10px;
}
.info-image {
  margin-left: 10px;
  width: 30px; /* 图片宽度 */
  height: 30px; /* 图片高度 */
  overflow: hidden;
}

.info-image image {
  width: 100%;
  height: 100%;
}
.info-title {
  font-size: 18px;
  font-weight: bold;
}
.info-item{
  display: flex;
}
.detailed-info {
  display: flex;
  flex-direction: column;
  gap: 20px;
  width: 100%;
  border: 2px solid #f0f4fc;
  padding-top: 20px;
}
.info-details{
  margin-bottom: 10px;
  margin-left: 10px;
}
.info-item {
  display: flex;
  justify-content: space-between;
  align-items: center; /* 垂直居中对齐 */
  width: 100%;
  gap: 10px; 
}
.label {
  color: #808080; /* 设置灰色 */
}
.value {
  margin-right: 20px; 
}
